  is_active        Boolean               @default(true) // üìå ‡πÄ‡∏ä‡πá‡∏Ñ‡∏ß‡πà‡∏≤‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ Active ‡∏≠‡∏¢‡∏π‡πà‡∏´‡∏£‡∏∑‡∏≠‡πÑ‡∏°‡πà
  total_logins     Int                   @default(0) // üìå ‡∏ô‡∏±‡∏ö‡∏à‡∏≥‡∏ô‡∏ß‡∏ô‡∏Ñ‡∏£‡∏±‡πâ‡∏á‡∏ó‡∏µ‡πà‡∏ú‡∏π‡πâ‡πÉ‡∏ä‡πâ‡∏•‡πá‡∏≠‡∏Å‡∏≠‡∏¥‡∏ô
  behavior_logs    user_behavior_logs[]
  biometrics       Biometric[]
  biometricEntries BiometricEntry[] // ‚úÖ ‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏Ñ‡∏ß‡∏≤‡∏°‡∏™‡∏±‡∏°‡∏û‡∏±‡∏ô‡∏ò‡πå‡∏¢‡πâ‡∏≠‡∏ô‡∏Å‡∏•‡∏±‡∏ö
  exerciseDiary    UserExerciseDiary[]

  @@index([roleId], map: "users_roleId_fkey")
}

model user_behavior_logs {
  id        Int      @id @default(autoincrement())
  userId    Int
  action    String   @db.VarChar(255) // ‡πÄ‡∏ä‡πà‡∏ô "Login", "Add Food", "Update Profile"
  timestamp DateTime @default(now()) @db.Timestamp(0)

  user users @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId], map: "behavior_userId_idx")
}

model foods {
  id               Int           @id @default(autoincrement())
  name             String        @db.VarChar(255)
  calories         Decimal?      @default(0.00) @db.Decimal(5, 2)
  protein          Decimal?      @default(0.00) @db.Decimal(5, 2)
  carbs            Decimal?      @default(0.00) @db.Decimal(5, 2)
  fat              Decimal?      @default(0.00) @db.Decimal(5, 2)
  unit             UnitType      @default(GRAM) // ‚úÖ ‡πÉ‡∏ä‡πâ Enum ‡πÅ‡∏ó‡∏ô String
  created_at       DateTime?     @default(now()) @db.Timestamp(0)
  updated_at       DateTime?     @default(now()) @updatedAt @db.Timestamp(0)
  category         FoodCategory? @default(COMMON_FOOD)
  source           String?       @db.VarChar(255)
  meal_items       meal_items[]
  foodDiaryEntries FoodDiary[]
  added_count      Int           @default(0)
}

model FoodDiary {
  id       Int     @id @default(autoincrement())
  userId   Int // ‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô‡∏à‡∏≤‡∏Å String ‡πÄ‡∏õ‡πá‡∏ô Int
  date     String  @db.VarChar(10) // YYYY-MM-DD
  mealType String
  foodId   Int
  quantity Decimal @default(1.00) @db.Decimal(5, 2) // ‡πÉ‡∏ä‡πâ Decimal ‡πÄ‡∏´‡∏°‡∏∑‡∏≠‡∏ô foods
  calories Decimal @default(0.00) @db.Decimal(5, 2)
  protein  Decimal @default(0.00) @db.Decimal(5, 2)
  carbs    Decimal @default(0.00) @db.Decimal(5, 2)
